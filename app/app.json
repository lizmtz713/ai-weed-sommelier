{
  "expo": {
    "name": "AI Weed Sommelier",
    "slug": "ai-weed-sommelier",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "aiweedsommelier",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1A2E"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aiweedsommelier.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1A1A2E"
      },
      "package": "com.aiweedsommelier.app"
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": ["expo-secure-store", "expo-image-picker"]
  }
}
